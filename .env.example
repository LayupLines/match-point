# Database
# For local development with Prisma dev:
# DATABASE_URL="prisma+postgres://localhost:51213/?api_key=..."
# For production (Neon, Supabase, or any PostgreSQL):
DATABASE_URL="postgresql://username:password@host:5432/database"

# NextAuth Configuration
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
NEXTAUTH_URL="http://localhost:3000"

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="generate-random-32-character-string-here"

# Cron Secret (for scheduled jobs authentication)
CRON_SECRET="generate-random-secret-for-cron"
